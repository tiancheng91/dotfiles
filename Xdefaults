! some terminal behaviour
*VT100.modifyCursorKeys: 2
*VT100.allowSendEvents: true
*VT100.keepSelection: true
*VT100.wideChars: true
URxvt*metaSendsEscape: true
URxvt*cutNewline: false
URxvt*vt100.bellIsUrgent: true
URxvt*print-pipe: cat > $HOME/urxvt.print

! scrolling in urxvt
URxvt*scrollTtyOutput: false
URxvt*scrollKey: true
URxvt*scrollBar: false

! urxvt extensions
URxvt*perl-lib: /home/dominikh/.urxvt/
URxvt*perl-ext-common: default
URxvt*perl-ext        : default,matcher,font-size
URxvt*url-launcher     : /usr/bin/chromium
URxvt*matcher.rend.0: -Uline
URxvt*matcher.button  : 3
URxvt*keysym.C-plus: perl:font:increase
URxvt*keysym.C-minus: perl:font:decrease

! keep screens/tmuxs scrollback also in urxvts scrollback
URxvt*secondaryScroll:  true

URxvt*background:  #000000
URxvt*foreground:  #ffffff

! a somewhat less aggressive cursor
URxvt*cursorColor: #cdc092

! some color adjustments
! cyan
URxvt*color6: #54728e
! blue
URxvt*color4: CornflowerBlue
! bold blue
URxvt*color12: #3b3bff

URxvt*font: xft:Envy Code R:size=10,xft:IPAMonaPGothic:antialias=false
Emacs*FontBackend: xft
